def generate_username(un = ""):
    #new username
    if not un:
        un = input("Please enter your name, or some username. Do not include numbers, as these will be randomly assigned for uniqueness\n")
        un += "#"

    #username already input, but matches another username (when sent to server, there
    #is a matching user (very unlikely), so must recreate number substring)
    else:
        un = un[:-4]
    for _ in range(4):
        un += str(random.randint(0,9))
    return un
